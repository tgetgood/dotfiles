[color]
	diff = auto
        status = auto
        branch = auto
	ui = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[alias]
        co = checkout
        st = status
        ls = ls-files
				glog = "log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
[branch]
        autosetupmerge = true
[user]
        name = Thomas Getgood
        email = thomas.getgood@gmail.com
[core]
	excludesfile = /home/thomas/.gitignore
	autocrlf = input
	eol = lf
	fileMode = false
[push]
	default = current

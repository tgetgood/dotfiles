[color]
        diff = auto
        status = auto
        branch = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[alias]
        co = checkout
        st = status
        ls = ls-files
[branch]
        autosetupmerge = true
[user]
        name = Thomas Getgood
        email = thomas.getgood@gmail.com
[core]
	excludesfile = /home/thomas/.gitignore
	autocrlf = input
	eol = lf

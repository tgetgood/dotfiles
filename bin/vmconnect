#!/bin/bash


NAME=$(ssh tvm -C "hostname" 2> /dev/null) 

if [ ! "$NAME" == "tvm" ]
then
  echo "VM not available. Boot it up and try again."
  exit 66
fi


sshfs -o uid=1008 -o gid=1010 -o nonempty thomas@tvm:/var/shared/sites/drupalsun /home/thomas/projects/drupalsun/

sshfs -o uid=1008 -o gid=1010 -o nonempty thomas@tvm:/var/shared/sites/d1 /home/thomas/projects/sandbox/

exit $?

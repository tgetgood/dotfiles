#!/bin/bash

if test ${#*} -ne 1
then
	KEY=~/.ssh/`hostname`
  # echo "Usage: auth KEYNAME"
  # exit 1
else
	KEY=~/.ssh/$1
fi

PRINT=`ssh-keygen -lf $KEY | cut -d\  -f2`

for added in `ssh-add -l | cut -d\  -f2`
do
  if test "$added" == "$PRINT"
  then
    echo "Key $1 already present. Doing nothing."
		exit 0
  fi
done

# Expire the key after 2 hours just in case.
ssh-add -t 7200 $KEY
exit $?
